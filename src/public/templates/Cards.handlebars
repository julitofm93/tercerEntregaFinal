{{#if productos}}

{{#each productos}}
<div class="container">
    <div class="col-md-4 ">
        <header class="card-header">
            <p class="card-header-title">{{this.title}}</p>
        </header>
        <div class="card-image">
            <figure>
                <img style="width: 200px" src={{this.thumbnail}} alt={{this.title}} />
            </figure>
        </div>
        <div class="card-content">
            <div class="content">
                <b>Descripci√≥n</b>
                <p>{{this.description}}</p>
                <b>Precio</b>
                <p>${{this.price}}</p>
                <b>Stock</b>
                <p>{{this.stock}} uni</p>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-primary" onclick="addCart(this)" name="{{this._id}}">Agregar</button>
        </div>
    </div>
</div>
{{/each}}

{{else}}
<p>No hay productos que mostrar.</p>
{{/if}}